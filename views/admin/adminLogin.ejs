<%- messages() %>

<% if (errors) {%>
    <ul class="notice">
    <% errors.forEach(error => { %>
        <li><%= error %></li>
    <%  }) %>
    </ul>
<% } %>

<div class="container-form">
    <form action="/admin/login" method="POST">
        <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; margin-bottom:25px;">
            <h1 style="margin-bottom: 10px;">Welcome Back</h1>
            <p>Login in to your account</p>
        </div>
      
        <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" placeholder="coolUserName" required>
        </div>

        <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="****" required>
        </div>

        <button type="submit" class="loginButton">Login</button>
    </form>
</div>